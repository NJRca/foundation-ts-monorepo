{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2022",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "types": ["node", "vscode"],
    "resolveJsonModule": true,
    "sourceMap": true,
    "composite": true,
    "declaration": true
  },
  "include": ["src"],
  "exclude": ["node_modules", ".vscode-test"]
}
