{
  "name": "@foundation/acceptance-tests",
  "version": "1.0.0",
  "description": "Acceptance tests for Foundation TypeScript Monorepo services",
  "private": true,
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "pretest": "echo 'ðŸš€ Starting acceptance tests against running containers...'",
    "posttest": "echo 'âœ… Acceptance tests completed'"
  },
  "devDependencies": {
    "@jest/globals": "^29.5.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "**/*.ts",
      "!**/*.d.ts",
      "!**/node_modules/**"
    ],
    "testTimeout": 30000
  }
}
